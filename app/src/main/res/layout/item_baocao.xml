<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <TextView
            android:id="@+id/tv_thoigian_baocao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="18dp"
            android:text="Số hiệu đàn" />

        <TextView
            android:id="@+id/tv_chiphi_baocao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="149dp"
            android:text="tình trạng" />

        <ImageView
            android:id="@+id/img_thucan"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignStart="@+id/tv_thoigian_baocao"
            android:layout_alignTop="@+id/tv_chiphi_baocao"
            android:background="@drawable/baocao" />

        <TextView
            android:id="@+id/tv_doanhthu_baocao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/tv_thoigian_baocao"
            android:layout_marginTop="45dp"
            android:text="số lượng"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:padding="2dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_delete_baocao"
            android:layout_width="25dp"
            android:layout_height="26dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/tv_thoigian_baocao"
            android:layout_marginEnd="29dp"
            app:srcCompat="@drawable/ic_delete_forever_black_24dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="121dp"
            android:text="vnd" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_chiphi_baocao"
            android:layout_marginEnd="-121dp"
            android:layout_toStartOf="@+id/textView"
            android:text="Chí Phí" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/img_delete_baocao"
            android:layout_centerVertical="true"
            android:text="Lãi Xuất" />

        <TextView
            android:id="@+id/tv_laixuat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/img_delete_baocao"
            android:layout_alignTop="@+id/tv_chiphi_baocao"
            android:text="TextView"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />

    </RelativeLayout>
</android.support.v7.widget.CardView>